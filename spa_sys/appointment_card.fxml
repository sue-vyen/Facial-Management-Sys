<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.spa_sys.controllers.AppointmentCardController"
            prefWidth="200"
            prefHeight="100"
            style="-fx-background-color: #ffffff;
            -fx-border-color: #cccccc;
            -fx-border-radius: 10;
            -fx-background-radius: 10;">

    <VBox spacing="5"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label fx:id="customerNameLabel" style="-fx-font-weight: bold; -fx-font-size: 14;" />
        <Label fx:id="serviceLabel" />
        <Label fx:id="facialistLabel" />
        <Label fx:id="remarksLabel" wrapText="true" style="-fx-font-size: 11;" />
    </VBox>
</AnchorPane>
